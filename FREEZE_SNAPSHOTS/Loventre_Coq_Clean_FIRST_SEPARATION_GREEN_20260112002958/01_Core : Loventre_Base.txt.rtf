(* GEOMETRIA *)\
(***************************************************)\
Module Loventre_Geometry.\
Parameter M : Type.\
Parameter Complexity : M -> nat.\
Parameter g : M -> M -> nat.\
Parameter kappa : M -> Z.\
Parameter alpha_c : Z.\
Parameter Flow : nat -> M -> M.\
Parameter base_point : M.\
Definition subcritical (x : M) : Prop :=\
(kappa x < alpha_c)%Z.\
Definition supercritical (x : M) : Prop :=\
(kappa x >= alpha_c)%Z.\
Definition stable (x : M) : Prop :=\
exists N, forall n, (n >= N)%nat -> Flow n x = Flow N x.\
Definition divergent (x : M) : Prop :=\
forall N, exists n, (n >= N)%nat /\\ Flow n x <> Flow N x.\
Definition contractible (x : M) : Prop :=\
exists p : nat -> M,\
p 0 = x / (exists T, p T = base_point) / (exists C, forall t, (t <= T)%\
nat -> Complexity (p t) <= C).\
Definition non_contractible (x : M) : Prop :=\
forall p : nat -> M,\
p 0 = x ->\
(forall T, p T = base_point -> False).\
End Loventre_Geometry.\
Export Loventre_Geometry.\
