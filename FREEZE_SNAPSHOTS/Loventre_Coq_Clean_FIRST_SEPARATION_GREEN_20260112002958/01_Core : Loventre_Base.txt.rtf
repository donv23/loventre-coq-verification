Module Loventre_Theorem.\
Theorem Loventre_static_separation :\
forall x : M,\
subcritical x ->\
contractible x /\\ ~ non_contractible x.\
Proof.\
intro x; intro H.\
pose proof (Reversibility_subcritical x H) as [Hs Hc].\
split.\
- exact Hc.\
- intro Hnc.\
destruct Hc as [p [Hp0 [HexT HexC]]].\
destruct HexT as [T HT].\
specialize (Hnc p Hp0).\
apply Hnc; exact HT.\
Qed.\
Theorem Loventre_dynamic_separation :\
forall x : M,\
exists n_c : nat,\
(forall n, (n < n_c)%nat ->\
stable (Flow n x) /\\ contractible (Flow n x)) /\\\
(forall n, (n >= n_c)%nat ->\
divergent (Flow n x) /\\ non_contractible (Flow n x)).\
Proof.\
intro x.\
destruct (Critical_transition x) as [n_c [H1 H2]].\
exists n_c.\
split.\
- intros n Hlt.\
specialize (H1 n Hlt).\
pose proof (Reversibility_subcritical (Flow n x) H1)\
as [Hs Hc].\
split; assumption.\
- intros n Hge.\
specialize (H2 n Hge).\
pose proof (Divergence_supercritical (Flow n x) H2)\
as [Hd Hnc].\
split; assumption.\
Qed.\
End Loventre_Theorem.\
