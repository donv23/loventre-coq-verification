Module Loventre_Lemmas.\
Lemma subcritical_not_supercritical :\
forall x : M, subcritical x -> ~ supercritical x.\
Proof.\
unfold subcritical, supercritical; intros; lia.\
Qed.\
Axiom Reversibility_subcritical :\
forall x : M,\
subcritical x ->\
stable x /\\ contractible x.\
Axiom Divergence_supercritical :\
forall x : M,\
supercritical x ->\
divergent x /\\ non_contractible x.\
Axiom Critical_transition :\
forall x : M,\
exists n_c : nat,\
(forall n, (n < n_c)%nat -> subcritical (Flow n x)) /\\\
(forall n, (n >= n_c)%nat -> supercritical (Flow n x)).\
End Loventre_Lemmas.\
Export Loventre_Lemmas.\
