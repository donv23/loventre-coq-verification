Module Loventre_Correspondence.\
Parameter embed : Config -> M.\
Axiom embed_injective :\
forall c1 c2, embed c1 = embed c2 -> c1 = c2.\
Axiom overflow_implies_supercritical :\
forall c : Config,\
overflow c ->\
supercritical (embed c).\
Axiom stable_implies_subcritical :\
forall c : Config,\
stable_conf c ->\
subcritical (embed c).\
Axiom complexity_mono :\
forall c,\
Complexity (embed c) >= complexity_conf c.\
Axiom embed_flow :\
forall (n : nat) (s : TMState) (c : Config),\
embed (Nat.iter n (TM_step s) c) = Flow n (embed c).\
Axiom contractible_iff_polytime :\
forall c,\
contractible (embed c) <->\
exists p, forall n, complexity_conf (p n) <= complexity_conf c + n.\
Axiom divergent_iff_noncontractible :\
forall c,\
divergent (embed c) <-> overflow c \\/ ~ stable_conf c.\
End Loventre_Correspondence.\
Export Loventre_Correspondence.\
